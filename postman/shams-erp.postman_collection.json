    {
      "name": "Media",
      "item": [
        {
          "name": "Upload",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file" }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/media/upload",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "media", "upload"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "https://api.shamsprojects.com" },
    { "key": "token", "value": "" }
  ]
}
